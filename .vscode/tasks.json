{
    "version": "2.0.0",
    "tasks": [
        // Python
        {
            "label": "PS: Python run current file (stdin)",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        // Swift
        {
            "label": "PS: Swift run current file (stdin)",
            "type": "shell",
            "command": "swift",
            "args": [
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        // C++
        {
            "label": "PS: C++ build & run current file (stdin)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "g++ -std=c++20 -O2 -pipe -Wall \"${file}\" -o /tmp/ps.out && /tmp/ps.out"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ]
